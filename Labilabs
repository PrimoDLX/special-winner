<body>

    <h1 id="display-text">Can i Seeüçâ?</h1>
    
    <!-- Requested Emoji -->
    <div id="jolly-emoji"></div>

    <div class="container" id="ui-box">
        <button id="yes-btn" onclick="finish()">YES</button>
        <button id="no-btn" onclick="handleNo()" style="top: 65%; left: 10%;">NO</button>
    </div>

    <script>
        let clickCount = 0;
        let noScale = 1.0;
        let yesScale = 1.0;

        function handleNo() {
            const noBtn = document.getElementById('no-btn');
            const yesBtn = document.getElementById('yes-btn');
            clickCount++;
            
            // 1. Shrink NO, Grow YES
            noScale -= 0.15; 
            if (noScale < 0.2) noScale = 0.2; 
            noBtn.style.transform = `scale(${noScale})`;

            yesScale += 0.4; 
            yesBtn.style.transform = `scale(${yesScale})`;

            // 2. 5-Angle Movement Loop
            const angles = [
                {top: '15%', left: '15%'}, 
                {top: '15%', left: '75%'}, 
                {top: '80%', left: '75%'}, 
                {top: '80%', left: '15%'}, 
                {top: '45%', left: '85%'}, 
                {top: '65%', left: '10%'}  // Reset to original
            ];

            const currentPos = angles[(clickCount - 1) % angles.length];
            noBtn.style.top = currentPos.top;
            noBtn.style.left = currentPos.left;
        }

        function finish() {
            // Final message in cursive, no emojis inside text
            document.getElementById('display-text').innerText = "Salamuch labilabsü•π";
            document.getElementById('ui-box').style.display = "none";
            document.getElementById('jolly-emoji').style.display = "block";
            document.body.style.backgroundColor = "#ffffff";
        }
    </script>
</body>
